---
const { title } = Astro.props;
import "../styles/global.css";
import { recipes } from "../data/recipes";

type Recipe = (typeof recipes)[number];

const recipesByCourse = recipes.reduce<Record<string, Recipe[]>>(
    (acc, recipe) => {
        if (!acc[recipe.course]) acc[recipe.course] = [];
        acc[recipe.course].push(recipe);
        return acc;
    },
    {},
);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>The Cookbook: {title}</title>

        <link rel="stylesheet" href="/src/styles/global.css" />
    </head>

    <body>
        <header>
            <nav class="main-nav">
                <a href="/" class="nav-home">
                    <img src="/fe_verLogo.png" alt="Cookbook Home" width="70" />
                </a>

                <!-- Entrées -->
                <div class="nav-group">
                    <a href="/entrees">Entrées</a>
                    <ul class="dropdown">
                        {
                            recipesByCourse["Entrées"]?.map((recipe) => (
                                <li>
                                    <a href={`/recipes/${recipe.slug}`}>
                                        {recipe.title}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Palate Cleansers -->
                <div class="nav-group">
                    <a href="/palate-cleansers">Palate Cleansers</a>
                    <ul class="dropdown">
                        {
                            recipesByCourse["Palate Cleansers"]?.map(
                                (recipe) => (
                                    <li>
                                        <a href={`/recipes/${recipe.slug}`}>
                                            {recipe.title}
                                        </a>
                                    </li>
                                ),
                            )
                        }
                    </ul>
                </div>

                <!-- Main Courses -->
                <div class="nav-group">
                    <a href="/main-courses">Main Courses</a>
                </div>

                <!-- Sides -->
                <div class="nav-group">
                    <a href="/sides">Sides</a>
                </div>

                <!-- Desserts -->
                <div class="nav-group">
                    <a href="/desserts">Desserts</a>
                </div>
            </nav>
            <hr />
        </header>

        <main>
            <slot />
        </main>
    </body>
</html>
