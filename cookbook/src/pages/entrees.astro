---
import BaseLayout from "../layouts/BaseLayout.astro";
import RecipeCard from "../components/RecipeCard.astro";
import { recipes } from "../data/recipes";

const entrees = recipes.filter((r) => r.course === "Entrées");
---

<BaseLayout title="Entrées">
    <h1>Entrées</h1>

    <p>Foundational drum systems that establish pulse, trust, and momentum.</p>

    <div class="recipe-grid">
        {
            entrees.map((recipe) => (
                <RecipeCard
                    title={recipe.title}
                    level={recipe.level}
                    slug={recipe.slug}
                />
            ))
        }
    </div>
</BaseLayout>
